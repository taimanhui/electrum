<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_60"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="@string/about_only"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_bk_ddake"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgview"
                android:layout_width="38dp"
                android:layout_height="73dp"
                android:layout_marginTop="@dimen/dp_60"
                android:src="@drawable/keyup" />

            <ImageView
                android:id="@+id/onekey"
                android:layout_width="88dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_50"
                android:background="@drawable/onekey_text" />

            <RelativeLayout
                android:id="@+id/attempt_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">

                <TextView
                    android:id="@+id/tet_s7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_20"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="@string/verson_updates"
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/update_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:drawablePadding="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_20"
                    android:text="@string/_1_0_0"
                    android:textColor="@color/graytext_color"
                    app:drawableEndCompat="@drawable/jiantou"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@color/separation_line" />

            <TextView
                android:id="@+id/tet_s5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:text="@string/user_agreement"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size"
                app:drawableEndCompat="@drawable/jiantou" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

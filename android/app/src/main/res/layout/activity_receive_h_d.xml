<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onekey"
    tools:context="org.haobtc.onekey.onekeys.homepage.process.ReceiveHDActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:padding="@dimen/dp_8"
            android:src="@drawable/left_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="@string/receive"
            android:textColor="@color/button_bk_ddake"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_below="@+id/RelativeLayout"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/white_back_tuo"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:src="@drawable/token_btc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text="@string/scan_input"
                android:textColor="@color/text_six"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_Orcode"
            android:layout_width="207dp"
            android:layout_height="207dp"
            android:layout_marginTop="27dp"
            android:background="#f1f1f1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/sp_15"
            android:text="@string/wallet_address"
            android:textColor="@color/text_six"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/text_receive_address"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/sp_15"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/text_two"
            android:textSize="@dimen/sp_14"
            tools:text="ksfkendsmlmalkdjrbfsamskalhdknc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/laft_gray_tuo">


            <LinearLayout
                android:id="@+id/linear_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:drawableStart="@drawable/verify"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:text="@string/check_"
                    android:textColor="@color/text_six"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="UseCompatTextViewDrawableXml" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_copy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:drawableStart="@drawable/copy_medium"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:text="@string/copy_"
                    android:textColor="@color/text_six"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="UseCompatTextViewDrawableXml" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/share_img"
                    android:drawablePadding="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:text="@string/share"
                    android:textColor="@color/text_six"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="UseCompatTextViewDrawableXml" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:src="@drawable/group_68" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:src="@drawable/logo_text" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/white_back_tuo">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/dp_19"
            android:src="@drawable/close_big_black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/choose_add_method"
            android:textColor="@color/text_two"
            android:textSize="@dimen/sp_18" />

        <RelativeLayout
            android:id="@+id/rel_hardware_Add"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/textView"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="@string/add_key_to_hard"
                android:textColor="@color/text_two"
                android:textSize="@dimen/sp_16"
                app:drawableStartCompat="@drawable/add_device_to_hardware" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/text_name"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginEnd="29dp"
                android:text="@string/support_device"
                android:textColor="@color/text_six"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color" />

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow_small" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_input_pub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_hardware_Add"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="@string/input_pub_key_"
                android:textColor="@color/text_two"
                android:textSize="@dimen/sp_16"
                app:drawableStartCompat="@drawable/add_device_to_hardware" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/input_pub_tip"
                android:textColor="@color/text_six"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow_small" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

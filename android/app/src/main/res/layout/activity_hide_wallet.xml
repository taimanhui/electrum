<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.personalwallet.hidewallet.HideWalletActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:background="@color/button_bk_ddake"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_backCreat"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/testCheckHidewallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/create_hide_wallet"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/layout_margin"
        app:cardCornerRadius="@dimen/corner_radius">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="59.5dp"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:text="@string/hide_wallet_is"
            android:textColor="@color/text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="60.5dp"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/separation_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center|start"
                android:text="@string/hide_wallet_know_tips"
                android:textColor="@color/light_text"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/hide_wallet_benefit"
                android:textColor="@color/light_text"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/testCheckTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/create_hide_wallet_tips"
                android:textColor="@color/light_text"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="300dp"
        android:layout_alignParentBottom="true"

        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_bk"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</RelativeLayout>
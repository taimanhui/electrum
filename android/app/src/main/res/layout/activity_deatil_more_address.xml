<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_bk_ddake"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context=".activities.transaction.DeatilMoreAddressActivity">

    <RelativeLayout
        android:id="@+id/tb2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?attr/colorPrimary"
        android:navigationIcon="@drawable/back">

        <ImageView
            android:id="@+id/img_backReceict"
            android:layout_width="45dp"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="15.3dp"
            android:padding="8dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/tv_in_tb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/to"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_moreAddress"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@color/bk_page"
        android:layout_width="match_parent"
        tools:itemCount="3"
        tools:listitem="@layout/moreaddress_item"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
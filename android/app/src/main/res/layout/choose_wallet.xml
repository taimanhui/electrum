<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/white_tuo_big"
        android:orientation="vertical">

        <TextView
            android:id="@+id/create_app_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:gravity="center"
            android:text="@string/create_new_walt"
            android:textColor="#494949"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/test_input_help_word"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:text="@string/input_help_word"
            android:textColor="#494949"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>

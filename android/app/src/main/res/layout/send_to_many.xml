<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/send2many"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">


        <androidx.cardview.widget.CardView
            android:id="@+id/msndmcns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/layout_margin"
            app:cardCornerRadius="@dimen/corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_21"
                    android:layout_marginTop="15dp"
                    android:text="@string/get_bi_address"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/little_circle_color">

                    <EditText
                        android:id="@+id/edit_address_2many"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="@string/input_btc_address"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:id="@+id/bn_sweep_2many"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_50"
                        android:padding="@dimen/dp_8"
                        android:src="@drawable/saoyisao" />

                    <TextView
                        android:id="@+id/bn_paste_2many"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:text="@string/paste"
                        android:textColor="@color/button_bk"
                        android:textSize="@dimen/smaller_text_size" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="19.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/get_bi_num"
                        android:textColor="@color/text" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="4.7dp"
                    android:background="@color/little_circle_color">

                    <EditText
                        android:id="@+id/edit_amount_2many"
                        android:layout_width="0dp"
                        android:textSize="15sp"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/input_send_num" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10.5dp"
                        android:gravity="center"
                        android:text="@string/btc"
                        android:textColor="@color/graytext_color"
                        android:textSize="15sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="4.7dp"
                    android:background="@color/little_circle_color">

                    <EditText
                        android:id="@+id/edit_Context"
                        android:layout_width="0dp"
                        android:textSize="15sp"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/introduce_choose" />

                    <TextView
                        android:id="@+id/byte_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10.5dp"
                        android:gravity="center"
                        android:text="@string/limit"
                        android:textColor="@color/graytext_color"
                        android:textSize="15sp" />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/lin_add_to"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="@drawable/add_bk"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3">

                    <ImageView
                        android:id="@+id/imgsudbnsd"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="@string/add"
                        android:textColor="@color/button_bk" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_add_to"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/msndmcns"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_marginBottom="65dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="2"
            tools:listitem="@layout/vout_item" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/button_bk_ddake">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/text_margin"
                android:text="@string/text_little_num"
                android:textColor="@color/button_bk"
                android:textSize="22sp">

            </TextView>

            <TextView
                android:layout_toEndOf="@+id/total"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/corner_radius"
                android:text="@string/btc"
                android:textSize="@dimen/smaller_text_size" />

            <Button
                android:id="@+id/bn_send2many_next"
                android:layout_alignParentEnd="true"
                android:layout_width="190dp"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@color/button_bk"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
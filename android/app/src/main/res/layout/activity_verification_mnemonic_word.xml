<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_bk_ddake"
    android:orientation="vertical"
    tools:context=".activities.onlywallet.VerificationMnemonicWordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/button_bk_ddake">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/creat_app_wallet"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="59.5dp"
                    android:layout_marginStart="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:text="@string/backups_wallet"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/sp_16"
                    android:layout_marginEnd="@dimen/sp_16"
                    android:background="@color/separation_line" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:text="@string/mnemonic_word_12"
                    android:textColor="#b3b3b3"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:orientation="vertical">

                    <!--         one           -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30">

                        <TextView
                            android:id="@+id/edit_one"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/edit_two"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/edit_three"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>
                    <!--         two           -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_10">

                        <TextView
                            android:id="@+id/edit_four"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/edit_five"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/edit_six"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>
                    <!--         three           -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_10">

                        <TextView
                            android:id="@+id/edit_seven"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/edit_eight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/edit_nine"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>
                    <!--         four           -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_10">

                        <TextView
                            android:id="@+id/edit_ten"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/edit_eleven"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/edit_twelve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/gray_tuo_6"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recl_helpWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="@dimen/divider_height_3dp"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp"
                    tools:itemCount="4"
                    tools:listitem="@layout/creatwallet_help_word_item">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
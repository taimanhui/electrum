<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="@string/communication_way"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="@string/connect_method"
            android:textColor="@color/light_text"
            android:textSize="@dimen/sp_13" />

        <RelativeLayout
            android:id="@+id/nfc_item"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/button_bk_ddake"
            android:paddingStart="@dimen/dp_22"
            android:paddingEnd="@dimen/dp_22">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="@string/nfc"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/nfc_link_logo" />

            <CheckBox
                android:id="@+id/nfc"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_checkbox"
                android:button="@null"
                android:checked="true"
                android:enabled="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/ble_item"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/button_bk_ddake"
            android:paddingStart="@dimen/dp_22"
            android:paddingEnd="@dimen/dp_22">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="@string/ble"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/blue_link_logo" />

            <CheckBox
                android:id="@+id/ble"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/circle_checkbox"
                android:button="@null"
                android:checked="false"
                android:enabled="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/usb_item"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/button_bk_ddake"
            android:paddingStart="@dimen/dp_22"
            android:paddingEnd="@dimen/dp_22">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="@string/usb"
                android:textColor="@color/text"
                app:drawableStartCompat="@drawable/usb_link_logo" />

            <CheckBox
                android:id="@+id/usb"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/circle_checkbox"
                android:button="@null"
                android:checked="false"
                android:enabled="false" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
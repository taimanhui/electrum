<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_background"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_16"
    tools:context=".onekeys.homepage.mindmenu.AddNewTokenActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:alpha="0.6"
        android:text="@string/token_address"
        android:textColor="@color/color_3C3C43"
        android:textSize="@dimen/sp_13" />

    <org.haobtc.onekey.ui.widget.PasteEditText
        android:id="@+id/edit_receiver_address"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/add_bk"
        android:ellipsize="end"
        android:gravity="start|top"
        android:hint="@string/input_valid_address"
        android:padding="@dimen/dp_12"
        android:textColor="@color/text_two"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/invalid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/ic_action" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:alpha="0.6"
            android:text="@string/address_invalid"
            android:textColor="@color/color_3C3C43"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/color_onekey_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/item_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress"
            android:indeterminateOnly="true"
            android:progress="50"
            android:visibility="gone" />

        <TextView
            android:id="@+id/add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="@string/add_"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>
</LinearLayout>

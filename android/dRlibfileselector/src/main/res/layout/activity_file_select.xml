<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="dr.android.fileselector.FileSelectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/choosepath"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_Preservation"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="保存" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_1dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="@dimen/padding_layout_little">

        <TextView
            android:id="@+id/id_fileselect_folderpath"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="75dp"
            android:gravity="center_vertical"
            android:minHeight="@dimen/minheight_text_normal"
            android:textSize="@dimen/text_size_small" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_1dp"
        android:background="#cccccc" />

    <ListView
        android:id="@+id/id_fileselect_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_layout_small"
        android:paddingRight="@dimen/padding_layout_small" />


</LinearLayout>